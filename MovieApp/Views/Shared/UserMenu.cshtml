<div class="dropdown-menu dropdown-menu-left">
    <div class="dropdown-header noti-title">
        <h6 class="text-overflow m-0">ברוך הבא</h6>
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <a href="/Movies/Seen"" class="dropdown-item">
            <i class="ni ni-single-02"></i>
            <span>סרטים שראיתי</span>
        </a>
        <a href="/Movies/Watchlist" class="dropdown-item">
            <i class="ni ni-settings-gear-65"></i>
            <span>רשימת צפייה</span>
        </a>
        <div class="dropdown-divider">

        </div>
        <form class="form-inline" asp-controller="Account" asp-action="Logout">
            <button type="submit" class="dropdown-item logout">
                <i class="ni ni-user-run"></i>
                <span class="logout">התנתק</span>
            </button>
        </form>
    }
    else
    {
        <a class="dropdown-item" asp-controller="Account" asp-action="Login">
            <i class="ni ni-single-02"></i>
            <span>התחברות</span>
        </a>
        <a class="dropdown-item" asp-controller="Account" asp-action="Register">
            <i class="ni ni-single-02"></i>
            <span>הרשמה</span>
        </a>}
