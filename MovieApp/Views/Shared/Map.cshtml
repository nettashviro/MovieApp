@{
    ViewBag.Title = "Map";
}


<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBAcpASlmqwBs5DpRzYzOo4-Tymi8lnp_o&callback=initMap&libraries=&v=weekly"
        defer></script>
<style type="text/css">
        #map {
            height: 50vw;
        }

        html,
        body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
</style>
<script>
    "use strict";

    let map;
    var movieLocations = @Json.Serialize(ViewBag.locations);

    function initMap() {
        map = new google.maps.Map(document.getElementById("map"), {
            center: {
                lat: 31.771959,
                lng: 35.217018
            },
            zoom: 8
        });

        let geocoder = new google.maps.Geocoder();

        for (var movie in movieLocations) {
            geocoder.geocode({ 'address': movieLocations[movie].country }, geocodeEncapsulation(movie));
        }
    }

    function geocodeEncapsulation(movie) {
        return (function (results, status) {

            var contentString = '<div style="float:left">' +
                `<img src="/img/movies/${movieLocations[movie].imageUrl}" width="50" height="50">` +
                '</div>' +
                '<div style="float: right; padding: 10px">' +
                `<h5>${movieLocations[movie].country}</h5>` +
                '</div>';

            var infowindow = new google.maps.InfoWindow({ maxWidth: 1000 });

            if (status == google.maps.GeocoderStatus.OK) {

                var marker = new google.maps.Marker({
                    position: results[0].geometry.location,
                    map: map,
                    title: movie
                });

                google.maps.event.addListener(marker, 'click', (function (marker, contentString, infowindow) {
                    return function () {
                        infowindow.setContent(contentString);
                        infowindow.open(map, marker);
                    };
                })(marker, contentString, infowindow));

            } else {
                alert("Could not find location: " + movieLocations[movie]);
            }
        });
    }
</script>

<div id="map"></div>
