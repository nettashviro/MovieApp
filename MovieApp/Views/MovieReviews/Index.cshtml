@model IEnumerable<MovieApp.Models.MovieReview>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rank)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsViolent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsBlackAndWhite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecommendedAge)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHavingSequel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Rank)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsViolent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBlackAndWhite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecommendedAge)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsHavingSequel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
