@model MovieApp.Models.Account

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
             <input asp-for="Email" class="form-control" type="hidden"/>
         
           
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
       
                <input asp-for="Password" class="form-control" type="hidden"/>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<Account.UserType>()" class="form-control">
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
          
                <input asp-for="ProfileImageUrl" class="form-control" type="hidden"/>
           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

